@model ContatoPerson.Models.Funcionario

@{
    ViewData["Title"] = "Cadastrar Funcionario";
}

<h1>
    Cadastar Funcionario
</h1>
<div class="row">
    <div class="col-md-4">
        <form asp-action="New">
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="CPF" class="control-label"></label>
                <input asp-for="CPF" class="form-control" />
            </div> <div class="form-group">
                <label asp-for="Endereco" class="control-label"></label>
                <input asp-for="Endereco" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="DataNascimento" class="control-label"></label>
                <input asp-for="DataNascimento" class="form-control" />
            </div>
            <label>Masculino</label>
            <input type="radio" asp-for="Sexo" value="M" />
            <label>Feminino</label>
            <input type="radio" asp-for="Sexo" value="F" />
            <br />
            <div class="form-group">
                <input type="submit" value="Gravar" asp-action="Funcionario" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<hr />
<div>
    <a asp-action="Index">Voltar</a>
</div>